_entervarid:
    enterid
    {
        $$ = *fetchvar();
    }
;

_idexpr:
    enterid
    zeroframe                           /* no explicit initialization */
|
    _entervarid
    '='
    expression
    {
        $$ = *expr_stmnt(assign(&$1, &$3));    /* explicit initialization */
    }        
;

vardefs:
    vardefs
    comma
    _idexpr
    {
        $$ = *catcode(&$1, &$3);    /* catenate variable    */
                                    /* initialization code  */
    }            
|
    _idexpr
|
    error
    ok
    zeroframe                       /* Empty stmnt  */
    {
        $$ = $3;
    }
;
